<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <ImageView
        android:layout_width="260dp"
        android:layout_height="260dp"
        android:scaleType="centerCrop"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo"
        android:layout_above="@id/register_input_nama"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/register_input_nama"
        android:padding="15dp"
        android:layout_marginLeft="15dp"
        android:drawableStart="@drawable/custom_name_icon"
        android:layout_marginRight="15dp"
        android:layout_centerInParent="true"
        android:textColor="@android:color/darker_gray"
        android:hint="Nama Lengkap"
        android:drawablePadding="12dp"
        android:inputType="text"
        android:textColorHint="@android:color/darker_gray"
        android:background="@drawable/custom_input"
        android:textSize="15sp"
        android:textStyle="bold"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/register_input_nohp"
        android:padding="15dp"
        android:layout_below="@+id/register_input_nama"
        android:layout_marginLeft="15dp"
        android:drawableStart="@drawable/custom_phone_icon"
        android:layout_marginRight="15dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="6dp"
        android:hint="Nomor Telepone"
        android:inputType="number"
        android:drawablePadding="12dp"
        android:textColor="@android:color/darker_gray"
        android:textColorHint="@android:color/darker_gray"
        android:background="@drawable/custom_input"
        android:textSize="15sp"
        android:textStyle="bold"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/register_input_password"
        android:padding="15dp"
        android:layout_marginTop="6dp"
        android:drawablePadding="12dp"
        android:layout_marginLeft="15dp"
        android:drawableStart="@drawable/custom_lock_icon"
        android:layout_marginRight="15dp"
        android:layout_below="@+id/register_input_nohp"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="@android:color/darker_gray"
        android:textColorHint="@android:color/darker_gray"
        android:background="@drawable/custom_input"
        android:textSize="15sp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/register_register_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@+id/register_input_password"
        android:background="@drawable/buttons"
        android:padding="15dp"
        android:textAllCaps="false"
        android:textSize="15sp"
        android:text="Buat Akun"
        android:textColor="#fff"/>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/custom_input"
        android:layout_margin="10dp">


        <TextView
            android:id="@+id/order_user_name"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="Nama "
            android:textStyle="bold"
            android:textColor="#686767"
            android:textSize="15dp"
            android:layout_marginLeft="2dp"/>

        <TextView
            android:id="@+id/order_phone_number"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/order_user_name"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="5dp"
            android:text="No hp"
            android:textAlignment="textStart"
            android:textColor="#686767"
            android:textSize="15dp" />
        <TextView
            android:id="@+id/order_date_time"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/order_phone_number"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="5dp"
            android:text="Tanggal"
            android:textAlignment="textStart"
            android:textColor="#686767"
            android:textSize="15dp" />
        <TextView
            android:id="@+id/order_addres_city"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/order_date_time"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="5dp"
            android:text="Alanat"
            android:textAlignment="textStart"
            android:textColor="#686767"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/order_total_price"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/order_addres_city"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="5dp"
            android:text="Total"
            android:textAlignment="textStart"
            android:textColor="#686767"
            android:textSize="15dp" />

        <Button
            android:id="@+id/show_all_products_btn"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/order_total_price"
            android:background="@drawable/buttons"
            android:textColor="@android:color/white"
            android:text="Lihat Pesanan"
            android:textAllCaps="false"
            android:layout_marginTop="15dp"/>

    </RelativeLayout>

</RelativeLayout>
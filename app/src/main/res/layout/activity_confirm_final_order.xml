<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConfirmFinalOrderActivity">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@color/colorPrimaryDark"
    android:id="@+id/rsatu">
    <TextView
        android:id="@+id/txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Konfirmasi Pesanan"
        android:layout_centerInParent="true"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:layout_margin="25dp"
        android:textAlignment="center"
        android:textStyle="bold"/>
</RelativeLayout>


    <EditText
        android:id="@+id/shippment_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:layout_below="@+id/rsatu"
        android:drawableStart="@drawable/custom_name_icon"
        android:padding="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:drawablePadding="12dp"
        android:background="@drawable/custom_input"

        android:layout_marginTop="60dp"
        android:hint="Nama Lengkap"/>

    <EditText
        android:id="@+id/shippment_phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/custom_phone_icon"
        android:padding="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:drawablePadding="12dp"
        android:layout_below="@id/shippment_name"
        android:background="@drawable/custom_input"
        android:layout_marginTop="5dp"
        android:hint="Nomor Telepon"/>

    <EditText
        android:id="@+id/shippment_addres"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/custom_lokasi_icon"
        android:padding="15dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/custom_input"
        android:layout_marginRight="15dp"
        android:drawablePadding="12dp"
        android:layout_below="@id/shippment_phone_number"
        android:layout_marginTop="5dp"
        android:hint="Alamat lengkap pengiriman"/>

    <EditText
        android:id="@+id/shippment_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/custom_kota_icon"
        android:padding="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:drawablePadding="12dp"
        android:background="@drawable/custom_input"
        android:layout_below="@id/shippment_addres"
        android:layout_marginTop="5dp"
        android:hint="Kota Tujuan"/>
    
    <Button
        android:id="@+id/confirm_final_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Konfirmasi"
        android:layout_marginTop="5dp"
        android:background="@drawable/buttons"
        android:layout_margin="10dp"
        android:textSize="15sp"
        android:textColor="@android:color/white"/>



</RelativeLayout>